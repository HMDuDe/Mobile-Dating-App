<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/oppacity_new"
    tools:context=".registrationPagePart2">

    <ImageView
        android:id="@+id/imageShade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BAFFE6DA"
        tools:ignore="ContentDescription" />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/top_Nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemIconTint="#7A7A7A"
        android:background="#FFFFFF"
        app:itemIconSize="35dp"
        app:menu="@menu/top_nav"
        android:visibility="visible">

        <TextView
            android:id="@+id/SearchMySoulmate1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="80dp"
            android:text="Search My Soulmate"
            android:textAlignment="center"
            android:textColor="#797979"
            android:textSize="30sp"
            android:fontFamily="cursive"
            tools:ignore="HardcodedText" />
    </com.google.android.material.bottomnavigation.BottomNavigationView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"

        app:itemIconSize="35dp"
        app:itemIconTint="#7A7A7A"

        app:menu="@menu/bottom_nav" >

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/bottomNav"
        android:layout_alignEnd="@+id/imageShade"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:background="#00D81B60"
        android:clickable="true"
        app:srcCompat="@drawable/ic_chat_icon"
        android:scaleType="center"
        app:backgroundTint="@color/browser_actions_divider_color"
        tools:ignore="KeyboardInaccessibleWidget,UnusedAttribute,VectorDrawableCompat" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomNav"
        android:layout_below="@+id/top_Nav"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:background="#BAFFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="212dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img1View"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_margin="30dp"
                        android:layout_weight="1"
                        tools:ignore="ContentDescription"
                        tools:srcCompat="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/img2View"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_margin="30dp"
                        android:layout_weight="1"
                        tools:ignore="ContentDescription"
                        tools:srcCompat="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/img3View"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_margin="30dp"
                        android:layout_weight="1"
                        tools:ignore="ContentDescription"
                        tools:srcCompat="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/img4View"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_margin="30dp"
                        android:layout_weight="1"
                        tools:ignore="ContentDescription"
                        tools:srcCompat="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/img5View"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_margin="30dp"
                        android:layout_weight="1"
                        tools:ignore="ContentDescription"
                        tools:srcCompat="@tools:sample/avatars" />

                    <ImageView
                        android:id="@+id/img6View"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_margin="30dp"
                        android:layout_weight="1"
                        tools:ignore="ContentDescription"
                        tools:srcCompat="@tools:sample/avatars" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView

                android:id="@+id/nameLbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textAlignment="center"
                android:textColor="#999797"

                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:orientation="horizontal">

                <!-- at theis point there needs to get the name adn age of the persons -->
                <TextView
                    android:id="@+id/ageLbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="25sp"
                    android:textColor="#999797"
                    android:text="Age" />

                <TextView
                    android:id="@+id/ageDisplLbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Number"
                    android:textAlignment="center"
                    android:textColor="#999797"
                    android:textSize="25sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="@string/about"
                android:textColor="#F87DAA"

                android:textSize="20sp" />

            <EditText
                android:id="@+id/aboutMeLbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/blockUserBtn"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Block" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>